<scxml initial="loop" xmlns="http://www.w3.org/2005/07/scxml">
	<datamodel>
		<data id="x" expr="6"/>
		<data id="fac" expr="1"/>
	</datamodel>  
	<state id="loop">
        <transition cond="dm['x'] &gt; 1">
			<assign name="dm['fac']" expr="dm['x'] * dm['fac']"/>
			<assign name="dm['x']" expr="dm['x']-1"/>
		</transition>
		<transition target="result">
			<log label="'Result'" expr="fac"/>
		</transition>
    </state>
   <final id="result"/>
</scxml>




