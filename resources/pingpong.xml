<scxml initial="init">
  <parallel id="init" initial="Pinger">
    <state id="Pinger">
      <onentry>
        <send event="ping"/>
      </onentry>
      <transition event="pong">
        <send event="ping" delay="5"/>
      </transition>
    </state>
    <state id="Ponger">
      <transition event="ping">
        <send event="pong" delay="5"/>
      </transition>
    </state>
  </parallel>
</scxml>
