<scxml initial="red">
	<final id="f1" />
	<transition event="quit" target="f1" />
	<state id="red">
		<onentry>
			<log expr="logging!" />
			<log expr="logging again!" />
			<send id="firstSend" event="quit" delay="3" />
		</onentry>
		<onexit>
			<cancel sendid="firstSend" />
		</onexit>
		<transition target="green" />
	</state>

	<state id="green">
		<transition event="e2" target="blue" />
	</state>

	<state id="blue" initial="subblue1">

		<state id="subblue1">
			<transition target="f1" />
		</state>

	</state>
</scxml> 